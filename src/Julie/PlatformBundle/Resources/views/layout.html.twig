	<link rel="stylesheet" href="{{ asset('Flexslider/flexslider.css') }}">
	{% endblock %}
</head>

<body>
	
	<div class="container-fluid">

{# NAVBAR TEMPLATE #}
		{% include "JuliePlatformBundle::Navbar/navBar.html.twig" %}

{# AUTHENTICATION #}
		<div id="authentication">
			{% if app.request.hasPreviousSession %}
				{% for type, messages in app.session.flashbag.all() %}
					{% for message in messages %}
					<div class="flash-{{ type }}">
						{{ message }}
					</div>
					{% endfor %}
				{% endfor %}
			{% endif %}
			<div>
				{% block fos_user_content %}
				{% endblock %}
			</div>
		</div>

	{% block body %}
	{% endblock body %}
	</div> <!-- div container-fluid -->
	{% block footer %}
	<div id="footer">
		<div id="social_links">
			<a href="https://www.instagram.com/escarabeille/" target="_blank"><img src="{{ asset('img/icones/Instagram.jpg') }}"></a>
			<a href="https://www.facebook.com/julie.franchet.5" target="_blank"><img src="{{ asset('img/icones/Facebook.jpg') }}"></a>
