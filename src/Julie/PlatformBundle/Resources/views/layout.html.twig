<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/html">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=yes"/>
	<title>Julie Franchet</title>

	{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/flexslider.css') }}">
	<link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}"/>
	<link rel="stylesheet" href="{{ asset('css/bootstrap-theme.css') }}"/>
	<link rel="stylesheet" href="{{ asset('css/bootstrap-drawer.min.css') }}">
	<link rel="stylesheet" href="{{ asset('css/main.css') }}">
	{#
	<link rel="stylesheet" href="{{ asset('css/main.css') }}">
	#}
	{% endblock %}
</head>

<body>


{# AUTHENTICATION #}
	{% block fos_user_content %}
		<div id="authentication">
			{% if app.request.hasPreviousSession %}
				{% for type, messages in app.session.flashbag.all() %}
					{% for message in messages %}
					<div class="flash-{{ type }}">
						{{ message }}
					</div>
					{% endfor %}
				{% endfor %}
			{% endif %}
		</div>
	{% endblock %}
	

	{% block navbar %}
		{% include "JuliePlatformBundle::Navbar/navBar.html.twig" %}
	{% endblock %}
	
	{% block body %}		
	{% endblock body %}

	{% block footer %}
		{% include "JuliePlatformBundle::Footer/footer.html.twig" %}
	{% endblock %}

{# JAVASCRIPT #}
{% block javascript %}
	<script type="text/Javascript" src="{{ asset('js/jquery-1.11.1.js')}}"></script>
	<script type="text/Javascript" src="{{ asset('js/bootstrap.min.js')}}"></script>
	<script type="text/javascript" src="{{ asset('js/drawer.min.js')}}"></script>
	<script type="text/Javascript" src="{{ asset('js/jquery.flexslider-min.js')}}"></script>
	{# Required by website owner 
	<script type="text/Javascript">
		document.oncontextmenu = new Function("return false");
	</script>
	#}
	<script type="text/javascript" src="{{ asset('js/resizeCanvas.js')}}"></script>
{% endblock javascript %}
</body>
</html>