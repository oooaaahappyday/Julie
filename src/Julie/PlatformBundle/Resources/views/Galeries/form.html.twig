			{{ form_widget(form.images, {'attr': {'class': 'form-horizontal'}}) }}
		</div>
	</div> 

	<div class="form-group"> {# Bouton Enregistrer #}
		<div class="col-sm-4 col-sm-offset-3">
			{{ form_widget(form.enregistrer, {'attr': {'class': 'btn btn-primary'}}) }}
		</div>
	</div>


			{# Script jquery d'upload des photos de la nouvelle galerie #}
			<script type="text/Javascript" src="{{ asset('/js/jquery-1.11.1.js')}}"></script>
			<script type="text/Javascript" src="{{ asset('/js/addPicture.js')}}"></script>
	{{ form_rest(form) }}
	{{ form_end(form) }}
</div>